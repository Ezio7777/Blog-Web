<%- include("base/header"); -%>

<h1>Compose</h1>
<div class="compose-cont">
  <form action="/compose" method="post">
    <h5>Title</h5>
    <input
      type="text"
      name="title"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-sm"
    />
    <h5>Post</h5>

    <textarea
      name="postBody"
      cols="30"
      rows="5"
      class="form-control"
    ></textarea>
    <button type="submit" name="button" class="btn btn-primary" id="publish">
      Pubilsh
    </button>
  </form>
</div>

<%- include("base/footer"); -%>
